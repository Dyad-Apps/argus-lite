# Argus IQ - Production Environment Configuration
# Copy to .env.production and fill in actual values
# NEVER commit production secrets to version control

NODE_ENV=production

# Service
SERVICE_NAME=argus-api
SERVICE_VERSION=${RELEASE_VERSION}

# Server
PORT=3040
HOST=0.0.0.0
TRUST_PROXY=true

# Database (PostgreSQL)
# Use connection string from your cloud provider
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:5432/${DB_NAME}?sslmode=require
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_SSL=true

# Cache (Valkey/Redis)
VALKEY_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:6379
CACHE_KEY_PREFIX=argus:prod:
CACHE_TTL_SECONDS=3600

# CORS - Set to your frontend domain(s)
CORS_ORIGIN=https://app.argusiq.example.com
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_PRETTY=false

# JWT - Generate with: openssl rand -base64 64
JWT_SECRET=${JWT_SECRET_FROM_SECRETS_MANAGER}

# Sentry - Error tracking
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=production
SENTRY_SAMPLE_RATE=0.1

# SSO Providers (optional)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
