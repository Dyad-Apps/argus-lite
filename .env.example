# Argus IQ Environment Configuration
# Copy this file to .env and fill in the values

# Environment
NODE_ENV=development

# Service identification
SERVICE_NAME=argus-api
SERVICE_VERSION=0.0.1

# Server
PORT=3040
HOST=0.0.0.0
TRUST_PROXY=false

# Database (PostgreSQL)
DATABASE_URL=postgresql://argus:argus_dev@localhost:5433/argus
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_SSL=false

# Cache (Valkey/Redis)
VALKEY_URL=redis://localhost:6378
CACHE_KEY_PREFIX=argus:
CACHE_TTL_SECONDS=3600

# CORS Configuration
# Comma-separated list of allowed origins, or '*' for all (not recommended in production)
# Examples:
#   Development: http://localhost:5173,http://localhost:3000
#   Production: https://app.argusiq.com,https://admin.argusiq.com
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_PRETTY=true

# JWT (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-here-change-in-production

# Sentry (optional - for error tracking)
# SENTRY_DSN=
# SENTRY_ENVIRONMENT=development
# SENTRY_SAMPLE_RATE=1.0

# Monitoring (Prometheus/Grafana)
METRICS_ENABLED=true
# Local Prometheus: http://localhost:9090
# AWS Managed Prometheus: https://aps-workspaces.{region}.amazonaws.com/workspaces/{workspace-id}
PROMETHEUS_ENDPOINT=http://localhost:9090

# AWS Prometheus Configuration (uncomment for AWS deployment)
# PROMETHEUS_AUTH=sigv4
# AWS_REGION=us-east-1
# PROMETHEUS_REMOTE_WRITE_URL=https://aps-workspaces.us-east-1.amazonaws.com/workspaces/ws-xxx/api/v1/remote_write
