# Argus IQ - Test Environment Configuration
# Used by CI/CD and local testing

NODE_ENV=test

# Service
SERVICE_NAME=argus-api
SERVICE_VERSION=0.0.1

# Server
PORT=3040
HOST=0.0.0.0
TRUST_PROXY=false

# Database (PostgreSQL) - CI uses localhost:5432
DATABASE_URL=postgresql://argus:argus_test@localhost:5432/argus_test
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_SSL=false

# Cache (Valkey/Redis)
VALKEY_URL=redis://localhost:6379
CACHE_KEY_PREFIX=argus:test:
CACHE_TTL_SECONDS=60

# CORS
CORS_ORIGIN=true
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=warn
LOG_PRETTY=false

# JWT - DO NOT use this in production!
JWT_SECRET=test-jwt-secret-for-testing-only-never-use-in-production
