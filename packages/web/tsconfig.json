{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@argus/shared": ["../shared/src"],
      "@argus/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*", "vite.config.ts"],
  "references": [
    { "path": "../shared" }
  ]
}
